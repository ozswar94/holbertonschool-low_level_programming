CC = gcc
NAME = school
SRC = main.c \
	school.c \

RM = rm -rf

CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

OBJ = $(SRC:.c=.o)

all: m.h $(OBJ)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)
	
clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
